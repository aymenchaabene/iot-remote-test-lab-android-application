<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="0dp"

    android:layout_centerInParent="true"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="389dp"
        android:layout_marginTop="15dp"
        android:layout_margin="@dimen/cardview_default_radius"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/displaydatatype"
        android:padding="16dp"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
          >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="DataType Name:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/textViewdatatypename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="DataType Name"
                android:textStyle="italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
         >

            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="DataType Unit:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/textViewdatatypeunit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="DataType Unit"
                android:textStyle="italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
           >

            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="DataType Type:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/textViewdatatypetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="DataType Type"
                android:textStyle="italic" />
        </LinearLayout>


    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>